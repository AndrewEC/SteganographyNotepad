<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Icon="/Assets/avalonia-logo.ico"
        Title="SteganographyNotepad"

        xmlns:view="using:SteganographyNotepad.Views"
        xmlns:viewmodel="using:SteganographyNotepad.ViewModels"
        x:Class="SteganographyNotepad.Views.MainWindow"
        x:DataType="viewmodel:MainWindowViewModel">
    
    <Window.Styles>
        <StyleInclude Source="/src/Styles/Styles.axaml" />
    </Window.Styles>

    <TabControl HorizontalAlignment="Center" SelectedIndex="{Binding SelectedTabIndex}">
        <TabItem>
            <TabItem.Header>
                <TextBlock>Settings</TextBlock>
            </TabItem.Header>
            <ScrollViewer>
                <StackPanel Width="800">
                    <StackPanel Classes="TabItemContent" Spacing="10">
                        <view:SettingsView DataContext="{Binding Settings}" />
                        <Button Classes="LoadButton"
                            IsEnabled="{Binding IsActionEnabled}"
                            Command="{Binding LoadTextCommand}"
                            Width="500">Load Text</Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <TextBlock>Edit</TextBlock>
            </TabItem.Header>
            <DockPanel Width="800">
                <Button Command="{Binding SaveTextCommand}"
                    IsEnabled="{Binding IsActionEnabled}"
                    Classes="SaveButton"
                    DockPanel.Dock="Top">Save</Button>
                <ScrollViewer>
                    <TextBox Text="{Binding TextContent}"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        IsEnabled="{Binding IsActionEnabled}"
                        DockPanel.Dock="Bottom"
                        Classes="MainInput" />
                </ScrollViewer>
            </DockPanel>
        </TabItem>

        <TabItem>
            <TabItem.Header>
                <TextBlock>Clean</TextBlock>
            </TabItem.Header>
            <ScrollViewer>
                <StackPanel Width="800">
                    <StackPanel Classes="TabItemContent">
                        <view:CleanView DataContext="{Binding CleanSettings}" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>

</Window>
