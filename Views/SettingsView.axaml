<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"

             xmlns:viewmodel="using:SteganographyNotepad.ViewModels"
             xmlns:model="using:SteganographyNotepad.Models"
             x:Class="SteganographyNotepad.Views.SettingsView"
             x:DataType="viewmodel:SettingsViewModel">

  <StackPanel Spacing="10" HorizontalAlignment="Center">
    <StackPanel Orientation="Horizontal">
      <TextBlock Classes="settingsLabel" Text="Password: " />
      <TextBox Classes="settingsInput" PasswordChar="*" Text="{Binding Password}" />
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <TextBlock Classes="settingsLabel" Text="Random Seed: " />
      <TextBox Classes="settingsInput" PasswordChar="*" Text="{Binding RandomSeed}" />
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <TextBlock Classes="settingsLabel" Text="Dummy Count: " />
      <TextBox Classes="settingsInput" PasswordChar="*" Text="{Binding DummyCount}" />
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <TextBlock Classes="settingsLabel" Text="Additional Hashes: " />
      <TextBox Classes="settingsInput" PasswordChar="*" Text="{Binding AdditionalHashes}" />
    </StackPanel>

    <CheckBox IsChecked="{Binding IsCompressionEnabled}" Classes="inputRow">Enable Compression</CheckBox>

    <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
      <StackPanel Orientation="Vertical" Spacing="5">
        <Button Classes="selectImages" Command="{Binding SelectImagesClickCommand}">Select Images</Button>
        <ItemsControl ItemsSource="{Binding CoverImages}" Name="itemsControl" IsVisible="{Binding CoverImageListVisible}">
          <ItemsControl.ItemTemplate>
              <DataTemplate DataType="model:CoverImage">
                  <StackPanel Orientation="Horizontal">
                      <TextBlock Text="{Binding DisplayName}" Classes="imageDisplayName" />
                      <Button
                          Command="{Binding #itemsControl.((viewmodel:SettingsViewModel)DataContext).MoveImageUpCommand}"
                          CommandParameter="{Binding Path}"
                          Classes="manageCoverImages">Up</Button>
                      <Button
                          Command="{Binding #itemsControl.((viewmodel:SettingsViewModel)DataContext).MoveImageDownCommand}"
                          CommandParameter="{Binding Path}"
                          Classes="manageCoverImages">Down</Button>
                      <Button
                          Command="{Binding #itemsControl.((viewmodel:SettingsViewModel)DataContext).RemoveImageCommand}"
                          CommandParameter="{Binding Path}"
                          Classes="manageCoverImages">Remove</Button>
                  </StackPanel>
              </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </StackPanel>
    </Border>

  </StackPanel>

</UserControl>
